{% extends 'base.html.twig' %}

{% block title %}
    {{ 'gallery details'|trans({'%id%': gallery.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'gallery_details'|trans({'%id%': gallery.id|default('')}) }}</h1>
    {% if gallery is defined and gallery|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'Id'|trans }}</dt>
            <dd>{{ gallery.id }}</dd>
            <dt>{{ 'Created_at'|trans }}</dt>
            <dd>{{ gallery.createdAt|format_date('long') }}</dd>
            <dt>{{ 'Updated_at'|trans }}</dt>
            <dd>{{ gallery.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'Title'|trans }}</dt>
            <dd>{{  gallery.title }}</dd>
        </dl>
        <p>
            <a href="{{ url('gallery_index') }}" title="{{ 'action.back_to_galleries'|trans }}" class="{{ 'btn btn-light' }}">
                {{ 'back_to_the_gallery'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}