{% extends 'base.html.twig' %}

{% block title %}
    {{ 'accounts'|trans }}
{% endblock %}

{% block body %}

    <h1>{{ 'accounts'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-bordered">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id'|trans, 'user.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Email'|trans, 'user.email') }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.items %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ url('user_show', {id: user.id}) }}" title="{{ 'action.show'|trans }}" class="btn">
                            {{ 'show_me'|trans }}
                        </a>
                        <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action.edit'|trans }}" class="btn">
                            {{ 'action.edit'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}